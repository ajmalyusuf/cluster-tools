{
    "variables" : {
        "hostname" : "sparkdansha-ssh.azurehdinsight.net",
        "username" : "sshuser",
        "password" : "AjmalRocks2019!"
    },

    "constants" : {
        "remote_program_dir" : "remote_program"
    },

    "main" : [
        "create_program_dir",
        "upload_program",
        "list_uploaded_program_dir"
    ],

    "create_program_dir" : {
        "action" : "ssh",
        "commands" : [
            "rm -fr $HOME/{remote_program_dir}",
            "mkdir -p $HOME/{remote_program_dir}"
        ]
    },

    "upload_program" : {
        "action" : "scp",
        "direction" : "send",
        "source_dir" : "./",
        "source_files" : [ "*" ],
        "target_dir" : "/home/{username}/{remote_program_dir}"
    },

    "list_uploaded_program_dir" : {
        "action" : "ssh",
        "commands" : [
            "ls -al $HOME/{remote_program_dir}/"
        ]
    }
}

