{
    "variables" : {
        "hostname" : "kcspark-ssh.azurehdinsight.net",
        "username" : "sshuser",
        "password" : "Password1.."
    },

    "constants": {
        "timeout_secs" : 100,

        "remote_home" : "~",
        "remote_program_dir" : "~/remote_program",
        "local_target_dir": "~/CLUSTER_LOGS/"
    },

    "main" : [
        "create_remote_program_dir",
        "upload_program",
        "execute_program_remotely",
        "build_tgz_file",
        "create_local_dir",
        "get_tgz_file",
        "delete_tgz_file"
    ],

    "create_remote_program_dir" : {
        "action" : "ssh",
        "commands" : [
            "rm -fr {remote_program_dir}",
            "mkdir -p {remote_program_dir}",
            "ls -al {remote_program_dir}"
        ]
    },

    "upload_program" : {
        "action" : "scp",
        "direction" : "send",
        "source_dir" : "./",
        "source_file" : "*",
        "target_dir" : "{remote_program_dir}"
    },

    "execute_program_remotely" : {
        "action" : "ssh",
        "commands" : [
            "cd {remote_program_dir}",
            "python run_remote.py ambari -a headnodehost -u admin -p {password} -s HDFS -c ALL --ssh-user {username} --ssh-pass {password} -f hdi_scripts/conf/ambari_copy_and_tar_logs_to_headnodehost.json --run-id {run_id} --live-run"
        ]
    },

    "build_tgz_file" : {
        "action" : "ssh",
        "commands" : [
            "tar -zcvf {run_id}.tgz ./{run_id}",
            "rm -fr ./{run_id}"
        ]
    },

    "create_local_dir" : {
        "action" : "local",
        "commands" : [
            "mkdir -p {local_target_dir}",
            "ls -al {local_target_dir}"
        ]
    },

    "get_tgz_file" : {
        "action" : "scp",
        "direction" : "get",
        "source_dir" : "{remote_home}",
        "source_file" : "{run_id}.tgz",
        "target_dir" : "{local_target_dir}"
    },

    "delete_tgz_file" : {
        "action" : "ssh",
        "commands" : [
            "rm -fr {run_id}.tgz"
        ]
    }
}

